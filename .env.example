# Runtime environment selection
VITE_APP_ENV=dev

# Convex
VITE_CONVEX_URL=https://your-dev-deployment.convex.cloud
VITE_CONVEX_DEPLOYMENT_DEV=dev:betterdoc-dev
VITE_CONVEX_DEPLOYMENT_STAGING=staging:betterdoc-staging
VITE_CONVEX_DEPLOYMENT_PROD=prod:betterdoc-prod

# WorkOS (public values exposed to client)
VITE_WORKOS_CLIENT_ID=client_123456789
VITE_WORKOS_REDIRECT_URI=http://localhost:3000/api/auth/callback

# WorkOS server-side AuthKit settings
WORKOS_API_KEY=sk_test_replace_me
WORKOS_CLIENT_ID=client_123456789
WORKOS_REDIRECT_URI=http://localhost:3000/api/auth/callback
WORKOS_COOKIE_PASSWORD=replace_with_32_plus_character_secret

# Optional WorkOS cookie overrides
WORKOS_COOKIE_NAME=betterdoc_session
WORKOS_COOKIE_MAX_AGE=34560000
WORKOS_COOKIE_SAME_SITE=lax
# WORKOS_COOKIE_DOMAIN=example.com

# Vercel metadata (optional in dev, recommended in staging/prod)
VITE_VERCEL_ENV=development
VITE_VERCEL_URL=localhost:3000
VITE_VERCEL_PROJECT_PRODUCTION_URL=betterdoc.example.com
