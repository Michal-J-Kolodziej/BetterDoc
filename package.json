{
  "name": "betterdoc",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bun run env:validate && vite dev",
    "build": "bun run env:validate && vite build",
    "lint": "eslint . --ext .ts,.tsx,.js --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "smoke:http": "node scripts/ci/run-smoke-tests.mjs",
    "env:validate": "bun run scripts/validate-env.ts",
    "convex:codegen": "convex codegen",
    "convex:dev": "CONVEX_DEPLOYMENT=$VITE_CONVEX_DEPLOYMENT_DEV convex dev",
    "convex:deploy:staging": "CONVEX_DEPLOYMENT=$VITE_CONVEX_DEPLOYMENT_STAGING convex deploy",
    "convex:deploy:prod": "CONVEX_DEPLOYMENT=$VITE_CONVEX_DEPLOYMENT_PROD convex deploy"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-router": "latest",
    "@tanstack/react-start": "latest",
    "@workos/authkit-tanstack-react-start": "^0.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "convex": "latest",
    "lucide-react": "^0.564.0",
    "react": "latest",
    "react-dom": "latest",
    "tailwind-merge": "^3.4.0",
    "zod": "latest"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "latest",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-react": "latest",
    "eslint": "latest",
    "eslint-plugin-react-hooks": "latest",
    "tailwindcss": "^4.1.18",
    "typescript": "latest",
    "vite": "latest",
    "vite-tsconfig-paths": "latest",
    "vitest": "latest"
  }
}
